@model Admin_Panel.Models.Customer
@{
    ViewData["Title"] = $"Customer {Model.CustomerId}";
}
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Title @Model.FirstName @Model.MiddleName @Model.LastName @Model.Suffix
        </dd>
        <dt class = "col-sm-2">
            Company
        </dt>
        <dd class = "col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class = "col-sm-2">
            SalesPerson
        </dt>
        <dd class = "col-sm-10">
            @Model.SalesPerson
        </dd>
        <dt class = "col-sm-2">
            EmailAddress
        </dt>
        <dd class = "col-sm-10">
            @Model.EmailAddress
        </dd>
        <dt class = "col-sm-2">
            Phone
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
        <dt class = "col-sm-2">
            Identity
        </dt>
        <dd class = "col-sm-10">
            @Model.Rowguid
        </dd>
        <dt class = "col-sm-2">
            ModifiedDate
        </dt>
        <dd class = "col-sm-10">
            @Model.ModifiedDate
        </dd>
    </dl>
</div>
<div class="btn-group">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.CustomerId">Edit</a> 
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>
